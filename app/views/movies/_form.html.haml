
= form_for @movie do |f|

  .field
    = f.label :title, "Titulo"
    = f.text_field :title

  .field
    = f.label :description, "Descripcion"
    = f.text_field :description

  .field
    = f.label :price, "Precio"
    = f.number_field :price 

  .field
    = f.label :released_at, "Fecha Salida"
    = f.date_field :released_at

  .field
    = f.submit
