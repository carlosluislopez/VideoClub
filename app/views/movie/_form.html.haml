
= form_for @movie do |f|

  .field
    = f.label :title, "Titulo"
    = f.text_field :title

  .field
    = f.label :description, "Descripcion"
    = f.text_field :description

  .field
    = f.label :price, "Precio"
    = f.text_field :price

  .field
    = f.label :avaible, "Disponible"
    = f.text_field :avaible

  .field
    = f.label :released_at, "Fecha Salida"
    = f.text_field :released_at

  .field
    = f.submit
