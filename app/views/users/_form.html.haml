
= form_for @user do |f|

  .form_row
    = f.label :name, "Nombre"
    = f.text_field :name

  .form_row
    = f.label :gender, "Genero"
    = f.select :genre, User.gender_options

  .form_row
    = f.label :email, "Email"
    = f.text_field :email

  .form_row
    = f.label :year_birth, "AÃ±o nacimiento"
    = f.text_field :year_birth

  .form_row
    = f.label :password
    = f.password_field :password
  
  .form_row
    = f.label :password_confirmation
    = f.password_field :password_confirmation

  .form_row
    = f.submit
